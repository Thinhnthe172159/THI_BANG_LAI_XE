<UserControl x:Class="THI_BANG_LAI_XE.Controller.MyTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:THI_BANG_LAI_XE.Controller"
             mc:Ignorable="d" Name="myTextBox">

    <Grid>
        <TextBlock x:Name="textBlockHint" Foreground="#868686" Margin="10 0"
                   VerticalAlignment="Center" Panel.ZIndex="1"
                   IsHitTestVisible="False"
                   Text="{Binding Path=Hint, ElementName=myTextBox}"/>
        <TextBox x:Name="textBox" BorderThickness="0 0 0 1" BorderBrush="#C4C4C4"/>
    </Grid>
</UserControl>