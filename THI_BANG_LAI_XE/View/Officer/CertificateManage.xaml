<Page x:Class="THI_BANG_LAI_XE.View.Officer.CertificateManage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:THI_BANG_LAI_XE.View.Officer"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="CertificateManage">
    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="Certificate Manager"
                   Grid.Row="0"
                   FontSize="20"
                   Margin="1" />
        <StackPanel Grid.Row="1"
                    Margin="5"
                    Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <Label Content="🧑‍🎓 Name" />
                <Border BorderBrush="Black"
                        Height="40"
                        BorderThickness="1"
                        Background="White"
                        CornerRadius="10">
                    <TextBox Width="200"
                             Height="35"
                             Name="txtFullName"
                             BorderThickness="0"
                             Background="Transparent"
                             TextChanged="FilterByName" />
                </Border>
            </StackPanel>
            <StackPanel Orientation="Vertical"
                        Margin="20,0,0,0">
                <Label Content=" ✉️ Email" />
                <Border BorderBrush="Black"
                        Height="40"
                        BorderThickness="1"
                        Background="White"
                        CornerRadius="10">
                    <TextBox Width="200"
                             Height="35"
                             Name="txtEmail"
                             BorderThickness="0"
                             Background="Transparent"
                             TextChanged="FilterByEmail" />
                </Border>
            </StackPanel>
            <StackPanel Orientation="Vertical"
                        Margin="20,0,0,0">
                <Label Content=" 📱 Phone" />
                <Border BorderBrush="Black"
                        Height="40"
                        BorderThickness="1"
                        Background="White"
                        CornerRadius="10">
                    <TextBox Width="200"
                             Height="35"
                             Name="txtPhone"
                             BorderThickness="0"
                             Background="Transparent"
                             TextChanged="FilterByPhone" />
                </Border>
            </StackPanel>
            <StackPanel Orientation="Vertical"
                        Margin="20,33,0,0">
                <Border BorderBrush="Black"
                        Height="25"
                        BorderThickness="1"
                        Background="White"
                        CornerRadius="10">
                    <Button Width="80"
                            Height="20"
                            Content="Reset"
                            BorderThickness="0"
                            Background="Transparent"
                            Click="ResetButton_Click" />
                </Border>
            </StackPanel>
        </StackPanel>
        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto">
            <DataGrid AutoGenerateColumns="False"
                      IsReadOnly="True"
                      x:Name="DataAccount"
                      SelectionChanged="DataAccount_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="*"
                                        Header="UserId"
                                        Binding="{Binding UserId}" />
                    <DataGridTextColumn Width="*"
                                        Header="FullName"
                                        Binding="{Binding FullName}" />
                    <DataGridTextColumn Width="*"
                                        Header="Email"
                                        Binding="{Binding Email}" />
                    <DataGridTextColumn Width="*"
                                        Header="Phone"
                                        Binding="{Binding Phone}" />
                    <DataGridTextColumn Width="*"
                                        Header="IssuedDate"
                                        Binding="{Binding IssuedDate}" />
                    <DataGridTextColumn Width="*"
                                        Header="ExpirationDate"
                                        Binding="{Binding ExpirationDate}" />
                    <DataGridTextColumn Width="*"
                                        Header="CertificateCode"
                                        Binding="{Binding CertificateCode}" />
                    <DataGridTemplateColumn Width="Auto" Header="Action">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Issue" Click="IssueCertificateButton_Click" Tag="{Binding UserId}" />
                                    <Button Content="Reject" Click="RejectCertificateButton_Click" Tag="{Binding UserId}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>
        <StackPanel x:Name="pagingStudent"
                    Grid.Row="3"
                    Margin="5"
                    Orientation="Horizontal" />
    </Grid>
</Page>