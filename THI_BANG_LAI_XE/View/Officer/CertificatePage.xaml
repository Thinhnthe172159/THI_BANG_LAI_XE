<Page x:Class="THI_BANG_LAI_XE.View.Officer.CertificatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:THI_BANG_LAI_XE.View.Officer"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CertificatePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.ColumnSpan="2" Grid.RowSpan="2">
            <Border.Background>
                <ImageBrush ImageSource="/Images/certificate.png" />
            </Border.Background>
            <TextBlock Name="txtName" Width="300" Height="50" HorizontalAlignment="Center"
                   VerticalAlignment="Center" FontSize="30" TextAlignment="Center"/>

        </Border>
        <TextBlock Name="txtIssue" Width="150" Height="30" HorizontalAlignment="Right"
       VerticalAlignment="Top" FontSize="20" TextAlignment="Center" Grid.Row="0" Grid.Column="0" Margin="0,5,0,0"/>
        <TextBlock Name="txtExp" Width="150" Height="30" HorizontalAlignment="Left"
VerticalAlignment="Top" FontSize="20" TextAlignment="Center" Grid.Row="0" Grid.Column="1" Margin="0,5,0,0"/>
    </Grid>
</Page>