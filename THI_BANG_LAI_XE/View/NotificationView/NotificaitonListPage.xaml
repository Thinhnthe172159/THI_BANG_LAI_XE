<Page x:Class="THI_BANG_LAI_XE.View.NotificationView.NotificaitonListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:THI_BANG_LAI_XE.View.NotificationView"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NotificaitonListPage">

    <Border CornerRadius="20" BorderThickness="1" Background="WhiteSmoke">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Notification" Grid.Row="0" FontSize="20" Margin="1" ></TextBlock>
            <TextBox Name="txtFilter" Background="White" HorizontalAlignment="Stretch" Margin="10" BorderBrush="blue" BorderThickness="0,0,0,1" Grid.Row="1" Height="40" TextChanged="TextBox_TextChanged"></TextBox>

            <ListBox ScrollViewer.VerticalScrollBarVisibility="Visible" x:Name="DataNofitication" Grid.Row="2" Background="Transparent" 
         BorderBrush="Transparent" Margin="10"
         SelectionChanged="Notification_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="0,0,0,1" BorderBrush="Gray">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock TextTrimming="CharacterEllipsis" Text="{Binding Title}" FontSize="13" FontWeight="Bold" Grid.Row="0" />
                                <TextBlock Text="{Binding DateTime}" FontSize="12" Foreground="Gray"
                               Grid.Row="1" HorizontalAlignment="Right"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Grid.Row="0" Grid.Column="1">
                <Label Content="Sender:" FontWeight="Bold"></Label>
                <TextBlock Name="txtSender" FontSize="17" FontWeight="Bold"></TextBlock>
            </StackPanel>
            <TextBlock  TextWrapping="Wrap" Name="txtTitle" FontSize="20" Grid.Row="1" Grid.Column="1" ></TextBlock>

            <TextBox Grid.Row="2" Grid.Column="1" HorizontalAlignment="Stretch" x:Name="txtContent" Height="266"/>

        </Grid>
    </Border>
</Page>