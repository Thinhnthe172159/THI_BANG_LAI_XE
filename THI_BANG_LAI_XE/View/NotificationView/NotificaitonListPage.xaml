<Page x:Class="THI_BANG_LAI_XE.View.NotificationView.NotificaitonListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:THI_BANG_LAI_XE.View.NotificationView"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NotificaitonListPage">

    <Border CornerRadius="20" BorderThickness="1" Background="WhiteSmoke">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Text=" Notification" Grid.Row="0" FontSize="20" Margin="1" ></TextBlock>
        <ListBox Grid.Row="1" x:Name="NotificationListBox" Background="Transparent" BorderBrush="Transparent" Margin="10,10,10,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" FontSize="16" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
    </Border>
</Page>