<Page x:Class="THI_BANG_LAI_XE.View.LectureView.ManagerStudent.StudentManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:THI_BANG_LAI_XE.View.LectureView.ManagerStudent"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudentManagerPage">

    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="Students" Grid.Row="0" FontSize="20" Margin="1" ></TextBlock>
        <StackPanel Grid.Row="1" Margin="5" Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <Label Content="🧑‍🎓 Student name"></Label>
                <Border BorderBrush="Black" Height="40" BorderThickness="1" Background="White" CornerRadius="10">
                    <TextBox Width="200" Height="35" BorderThickness="0" Background="Transparent" TextChanged="FilterByName"></TextBox>
                </Border>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="20,0,0,0">
                <Label Content=" 📞 Phone number"></Label>
                <Border BorderBrush="Black" Height="40" BorderThickness="1" Background="White" CornerRadius="10">
                    <TextBox Width="200" Height="35" BorderThickness="0" Background="Transparent" TextChanged="FilterByPhoneNumber"></TextBox>
                </Border>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="20,0,0,0">
                <Label Content=" 🎓 Courses"></Label>
                <ComboBox Width="200" Height="40" Background="Transparent" BorderThickness="2"></ComboBox>
            </StackPanel>
        </StackPanel>
        <ScrollViewer Grid.Row="2">
             <StackPanel>
            <DataGrid AutoGenerateColumns="False" IsReadOnly="True" x:Name="DataStudent" SelectionChanged="DataStudent_SelectionChanged" >
                <DataGrid.Columns>
                    <DataGridTextColumn Width="*" Header="FullName" Binding="{Binding FullName}"></DataGridTextColumn>
                    <DataGridTextColumn Width="*" Header="email" Binding="{Binding Email}"></DataGridTextColumn>
                    <DataGridTextColumn Width="*" Header="Phone" Binding="{Binding Phone}"></DataGridTextColumn>
                    <DataGridTextColumn Width="*" Header="School" Binding="{Binding School}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        </ScrollViewer>
       
        <StackPanel x:Name="pagingStudent" Grid.Row="3" Margin="5" Orientation="Horizontal">

        </StackPanel>
    </Grid>
</Page>
