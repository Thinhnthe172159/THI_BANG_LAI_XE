<Page x:Class="THI_BANG_LAI_XE.View.UserProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:THI_BANG_LAI_XE.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserProfilePage">

    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="150"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="User Profile" FontSize="20" Margin="2"/>
        <TextBlock Grid.Column="0" Grid.Row="6" x:Name="txtName" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Red" FontSize="15" Height="20"/>
        <TextBlock Grid.Column="1" Grid.Row="1" Text="Full Name:" FontSize="15"/>
        <TextBlock Grid.Column="2" Grid.Row="1" x:Name="txtFullName" VerticalAlignment="Top" Foreground="Red" FontSize="15" FontWeight="Bold" Height="20"/>
        <TextBlock Grid.Column="1" Grid.Row="2" Text="Email:" FontSize="15"/>
        <TextBlock Grid.Column="2" Grid.Row="2" x:Name="txtEmail" VerticalAlignment="Top" Foreground="Red" FontSize="15" FontWeight="Bold" Height="20"/>
        <TextBlock Grid.Column="1" Grid.Row="3" Text="Phone:" FontSize="15"/>
        <TextBlock Grid.Column="2" Grid.Row="3" x:Name="txtPhone" VerticalAlignment="Top" Foreground="Red" FontSize="15" FontWeight="Bold" Height="20"/>
        <TextBlock Grid.Column="1" Grid.Row="4" Text="Class:" FontSize="15"/>
        <TextBlock Grid.Column="2" Grid.Row="4" x:Name="txtClass" VerticalAlignment="Top" Foreground="Red" FontSize="15" FontWeight="Bold" Height="20"/>
        <TextBlock Grid.Column="1" Grid.Row="5" Text="School:" FontSize="15"/>
        <TextBlock Grid.Column="2" Grid.Row="5" x:Name="txtSchool" VerticalAlignment="Top" Foreground="Red" FontSize="15" FontWeight="Bold" Height="20"/>
        <TextBlock Grid.Column="1" Grid.Row="6" Text="Role:" FontSize="15"/>
        <TextBlock Grid.Column="2" Grid.Row="6" x:Name="txtRole" VerticalAlignment="Top" Foreground="Red" FontSize="15" FontWeight="Bold" Height="20"/>
        <TextBlock Grid.Column="1" Grid.Row="7" Text="Date Created:" FontSize="15"/>
        <TextBlock Grid.Column="2" Grid.Row="7" x:Name="txtDateCreate" VerticalAlignment="Top" Foreground="Red" FontSize="15" FontWeight="Bold" Height="20"/>
        <Image Source="/Images/user-register-icon.png" Margin="-3,30,97,0" Grid.RowSpan="5" Grid.Row="1" Grid.ColumnSpan="2"/>

    </Grid>
</Page>
